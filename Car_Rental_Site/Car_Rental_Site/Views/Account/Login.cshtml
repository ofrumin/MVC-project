@model Car_Rental_Site.Models.UserLoginVM
@{
    ViewBag.Title = "Login";
}
<meta name="viewport" content="width=device-width" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@*<div class="container">*@
<div>
    <h2 style ="color:darkgoldenrod">Login</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <div class="form=group">
            @Html.LabelFor(u => u.Username)
            @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Username)
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Password)
            @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Password)
        </div>

        <div class="form-group">
            @Html.CheckBoxFor(u => u.PersistentLogin)
            @Html.LabelFor(u => u.PersistentLogin)
            @Html.ValidationMessageFor(u => u.PersistentLogin)
        </div>

        <button type="submit">Login</button>
    }
</div>
