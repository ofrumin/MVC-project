@using Car_Rental_Site.Models
@model UserRegistrationVM

@{
    ViewBag.Title = "Register";
}
<meta name="viewport" content="width=device-width" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />


<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script>

    $(function () {

        var waitImg = new Image(25, 25);
        waitImg.src = '@Url.Content("~/Content/wait_icon.gif")';

        $('#Username').change(function () {
            
            $.get('@Url.Action("CheckUsername")' + "?username=" + $(this).val(), function (respObj) {
               
            });
        });
    });
</script>



@*<div class="container">*@
<div>
    <h2 style ="color:darkgoldenrod">Register</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(ur => ur.FirstName)
            @Html.TextBoxFor(ur => ur.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(ur => ur.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(ur => ur.LastName)
            @Html.TextBoxFor(ur => ur.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(ur => ur.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(ur => ur.ID)
            @Html.TextBoxFor(ur => ur.ID, new { @class = "form-control" })
            @Html.ValidationMessageFor(ur => ur.ID)
        </div>

        <div class="form-group">
            @Html.LabelFor(ur => ur.Username)
            @Html.TextBoxFor(ur => ur.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(ur => ur.Username)
        </div>

        <div class="form-group">
            @Html.LabelFor(ur => ur.Password)
            @Html.PasswordFor(ur => ur.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(ur => ur.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(ur => ur.ConfirmPassword)
            @Html.PasswordFor(ur => ur.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(ur => ur.ConfirmPassword)
        </div>

        <div class="form-group">
            @Html.LabelFor(ur => ur.Email)
            @Html.TextBoxFor(ur => ur.Email, new { @class = "form-control", type = "email" })
            @Html.ValidationMessageFor(ur => ur.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(ur => ur.BirthDate)
            @Html.TextBoxFor(ur => ur.BirthDate, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(ur => ur.BirthDate)
        </div>
        <div class="form-group">
            @Html.Label("Gender")<br />

            @Html.Label("Male")
            @Html.RadioButtonFor(ur => ur.Gender, "Male")

            @Html.Label("Female")
            @Html.RadioButtonFor(ur => ur.Gender, "Female")

            @Html.ValidationMessageFor(ur => ur.Gender)
        </div>

        <button type="submit">Register</button>
    }
</div>






